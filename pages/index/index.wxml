<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-dots='true'>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>

<view class='items-list'>
  <view class='pro-item'>
    <image class='pro-logo' src='images/fruit.png'></image>
    <view class="pro-body">
      <view class='pro-title'>房贷标题</view>
      <text class="pro-desc">房贷内容</text>
      <view class='pro-footer'>
        <image class="btn-detail" src='/images/btn-detail.png'></image>
        <image class="btn-ask" src='/images/btn-detail.png'></image>
      </view>
    </view>
  </view>
</view>